pipeline {
    agent any  // Use any available agent or node

    tools {
        maven '3.9.8'  // Name of the Maven installation from Jenkins global tools
    }

    environment {
        JAVA_HOME = 'C:/Program Files/Java/jdk-17'  // Set the Java version (adjust as needed)
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'Cloning the repository...'
                git url: 'https://github.com/Ind20/testng-parallel.git', branch: 'master'
            }
        }

        stage('Build and Test') {
            steps {
                echo 'Building the project with Maven...'
                bat 'mvn clean test -P smoke'  // Clean, compile, run tests, and package the project
            }
        }

    }

    post {
        success {
            echo 'Build succeeded!'
        }
        failure {
            echo 'Build failed!'
        }
        always {
            echo 'Cleaning workspace...'
            cleanWs()  // Cleans the workspace after the build
        }
    }
}
